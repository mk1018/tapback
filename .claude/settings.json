{
  "hooks": {
    "PreToolUse": [
      {
        "matcher": "*",
        "hooks": [
          {
            "type": "command",
            "command": "uvx --from tapback tapback 'ツール実行前' --silent --type yesno --timeout 300"
          }
        ]
      }
    ],
    "PostToolUse": [
      {
        "matcher": "*",
        "hooks": [
          {
            "type": "command",
            "command": "uvx --from tapback tapback 'ツール実行後' --silent --type yesno --timeout 300"
          }
        ]
      }
    ],
    "PostToolUseFailure": [
      {
        "matcher": "*",
        "hooks": [
          {
            "type": "command",
            "command": "uvx --from tapback tapback 'ツール実行失敗' --silent --type yesno --timeout 300"
          }
        ]
      }
    ],
    "PermissionRequest": [
      {
        "matcher": "*",
        "hooks": [
          {
            "type": "command",
            "command": "uvx --from tapback tapback '確認を求めています' --silent --type yesno --timeout 300"
          }
        ]
      }
    ],
    "Notification": [
      {
        "hooks": [
          {
            "type": "command",
            "command": "uvx --from tapback tapback '通知' --silent --type yesno --timeout 300"
          }
        ]
      }
    ],
    "UserPromptSubmit": [
      {
        "hooks": [
          {
            "type": "command",
            "command": "uvx --from tapback tapback 'ユーザー入力' --silent --type yesno --timeout 300"
          }
        ]
      }
    ],
    "SessionStart": [
      {
        "hooks": [
          {
            "type": "command",
            "command": "uvx --from tapback tapback 'セッション開始' --silent --type yesno --timeout 300"
          }
        ]
      }
    ],
    "SessionEnd": [
      {
        "hooks": [
          {
            "type": "command",
            "command": "uvx --from tapback tapback 'セッション終了' --silent --type yesno --timeout 300"
          }
        ]
      }
    ],
    "Stop": [
      {
        "hooks": [
          {
            "type": "command",
            "command": "uvx --from tapback tapback '作業完了' --silent --type yesno --timeout 300"
          }
        ]
      }
    ],
    "SubagentStart": [
      {
        "hooks": [
          {
            "type": "command",
            "command": "uvx --from tapback tapback 'サブエージェント開始' --silent --type yesno --timeout 300"
          }
        ]
      }
    ],
    "SubagentStop": [
      {
        "hooks": [
          {
            "type": "command",
            "command": "uvx --from tapback tapback 'サブエージェント完了' --silent --type yesno --timeout 300"
          }
        ]
      }
    ],
    "PreCompact": [
      {
        "hooks": [
          {
            "type": "command",
            "command": "uvx --from tapback tapback 'コンパクト前' --silent --type yesno --timeout 300"
          }
        ]
      }
    ]
  }
}
